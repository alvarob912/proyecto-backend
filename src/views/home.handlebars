<div>
    <h1>Products</h1>
    <div id="product-list-container">
        {{#each products}}
            <div id="product-item">
                <p id="title">{{title}}</p>
                <p>{{description}}</p>
                <p>${{price}}</p>
                {{#if havePics}}
                    <div class="thumbnail-container">
                        <img src="../../statics/img/{{thumbnails.0.originalName}}" alt="">
                    </div>
                {{else}}
                    <p id="no-image">no imagen</p>
                {{/if}}
            </div>
        {{/each}}

<script src="/socket.io/socket.io.js"></script>
<script src="/backend-master/src/public/js/index.js"></script>